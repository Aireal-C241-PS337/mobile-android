<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8"
    android:padding="16dp"
    tools:context=".ui.keranjang.keranjangFragment">

    <TextView
        android:id="@+id/tv_cart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keranjang"
        android:textSize="24sp"
        android:textColor="#000"
        android:paddingBottom="16dp"
        android:textStyle="bold" />

    <!-- Cart Items List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Repeatable Item Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/item_background"
                android:layout_marginBottom="8dp">

                <!-- Item Image -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    tools:src="@tools:sample/avatars"
                    android:scaleType="centerCrop" />

                <!-- Item Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baju Lebaran Anak Cewek"
                        android:textSize="16sp"
                        android:textColor="#000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 150.000"
                        android:textSize="14sp"
                        android:textColor="#00BFFF" />
                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:background="#424C4C"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="1"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#000" />

                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:background="#d3d3d3"
                        android:textColor="#000" />
                </LinearLayout>

                <!-- Delete Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delate"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Delete" />
            </LinearLayout>

            <!-- Repeatable Item Layout 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/item_background"
                android:layout_marginBottom="8dp">

                <!-- Item Image -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    tools:src="@tools:sample/avatars"
                    android:scaleType="centerCrop" />

                <!-- Item Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baju Lebaran Anak Cewek"
                        android:textSize="16sp"
                        android:textColor="#000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 150.000"
                        android:textSize="14sp"
                        android:textColor="#00BFFF" />
                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:background="#424C4C"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="1"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#000" />

                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:background="#d3d3d3"
                        android:textColor="#000" />
                </LinearLayout>

                <!-- Delete Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delate"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Delete" />
            </LinearLayout>

            <!-- Repeatable Item Layout 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/item_background"
                android:layout_marginBottom="8dp">

                <!-- Item Image -->
