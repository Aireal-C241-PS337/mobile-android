<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="20dp"
    android:background="@color/white"
    tools:context=".ui.regis.RegisterActivity">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_back_to_login"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:alpha="0"
                android:background="@drawable/ic_back"
                android:contentDescription="@string/back_to_login_description"
                android:translationZ="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:alpha="500" />

            <ImageView
                android:id="@+id/ivregis"
                android:layout_width="327dp"
                android:layout_height="328dp"
                android:layout_marginTop="32dp"
                android:alpha="0"
                android:src="@drawable/logo"
                android:transitionName="profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:alpha="500" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivregis"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="325dp"
                android:layout_height="55dp"
                android:layout_marginTop="85dp"
                android:alpha="0"
                android:autofillHints=""
                android:fontFamily="@font/poppins_bold"
                android:hint="@string/username_hint"
                android:maxLines="1"
                android:background="@drawable/background_edit_text"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivregis"
                tools:alpha="500"
                tools:ignore="TextFields" />

            <capstone.tim.aireal.customview.EmailActivity
                android:id="@+id/edt_Email"
                android:layout_width="325dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:alpha="0"
                android:background="@drawable/background_edit_text"
                android:fontFamily="@font/poppins_bold"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:translationZ="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_name"
                tools:alpha="500" />

            <capstone.tim.aireal.customview.PasswordActivity
                android:id="@+id/edt_Password"
                android:layout_width="325dp"
                android:layout_height="55dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:alpha="0"
                android:background="@drawable/background_edit_text"
                android:fontFamily="@font/poppins_bold"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:translationZ="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.473"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_Email"
                tools:alpha="500" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="324dp"
                android:layout_height="44dp"
                android:layout_marginTop="30dp"
                android:alpha="0"
                android:background="@drawable/background_button"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/registerbutton"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:translationZ="0dp"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.471"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_Password"
                tools:alpha="500" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
